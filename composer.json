{
    "name": "ajgarlag/psr15-router",
    "description": "Component to route PSR-7 requests through PSR-15 middlewares",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Antonio J. Garc√≠a Lagar",
            "email": "aj@garcialagar.es"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3",
        "psr/http-message": "^1",
        "psr/http-server-middleware": "^1"
    },
    "require-dev": {
        "phpspec/phpspec": "^6",
        "friendsofphp/php-cs-fixer": "^2",
        "memio/spec-gen": "^0.10",
        "nyholm/psr7": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Ajgarlag\\Psr15\\Router\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Ajgarlag\\Psr15\\Router\\": "./spec"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpspec run",
        "fix-cs": "vendor/bin/php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4.x-dev"
        }
    }
}
